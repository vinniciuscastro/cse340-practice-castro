<%- include('../../partials/header') %>
    <h1><%= title %></h1>

    <% if (users && users.length > 0) { %>
        <div class="users-list">
            <% users.forEach((user) => { %>
                <div class="user-card">
                    <h3><%= user.name %></h3>
                    <p><%= user.email %></p>
                    <% if (session && session.user) { %>
                        <%
                            const currentUser = session.user;
                            const isOwnCard = currentUser.id === user.id;
                            const isAdmin = currentUser.role_name === 'admin';
                            const canEdit = isOwnCard || isAdmin;
                            const canDelete = isAdmin && !isOwnCard;
                        %>
                        <div class="actions">
                            <% if (canEdit) { %>
                                <a href="/users/<%= user.id %>/edit">Edit</a>
                            <% } %>
                            <% if (canDelete) { %>
                                <form method="POST" action="/users/<%= user.id %>/delete" style="display: inline;">
                                    <button type="submit" onclick="return confirm('Delete this user?')">
                                        Delete
                                    </button>
                                </form>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="no-users">No registered users yet.</p>
    <% } %>
<%- include('../../partials/footer') %>