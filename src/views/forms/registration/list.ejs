<%- include('../../partials/header') %>
<main>
    <h1><%= title %></h1>

    <% if (users && users.length > 0) { %>
        <div class="users-list">
            <% users.forEach(user => { %>
                <div class="user-item">
                    <h3 class="user-name"><%= user.name %></h3>
                    <p class="user-email"><strong>Email:</strong> <%= user.email %></p>
                    <p class="user-id"><strong>ID:</strong> <%= user.id %></p>
                    <p class="user-date"><strong>Registered:</strong> <%= new Date(user.created_at).toLocaleDateString() %></p>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <p class="no-users">No registered users yet.</p>
    <% } %>
</main>
<%- include('../../partials/footer') %>